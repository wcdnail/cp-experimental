{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[H][GDB] LaunchPad ",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/launch-pad/launch-pad.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [ 
                { 
                    "name": "GSETTINGS_SCHEMA_DIR",
                    "value": "${workspaceFolder}/build/launch-pad/wcd.launch.pad.schema"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Dev/msys64/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "auto-formatting for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
